{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "travis_build_number": "{{env `TRAVIS_BUILD_NUMBER`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "instance_type": "c3.4xlarge",
    "source_ami": "ami-9abea4fb",
    "ssh_username": "ubuntu",
    "ami_name": "bio-base-1.{{user `TRAVIS_BUILD_NUMBER`}}",
    "ami_description": "Biology Dept. informatix machine image by Watzek DI",
    "ami_groups": "all"
  }],
  "provisioners": [{
     "type": "shell",
     "scripts": [
       "shell/install_bib.sh",
       "shell/install_aws_cli.sh"
     ]
  }]
}
